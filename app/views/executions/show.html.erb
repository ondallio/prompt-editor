<div class="max-w-4xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">실행 상세</h1>
    <div class="flex items-center gap-3">
      <%= link_to "프롬프트 보기", prompt_path(@execution.prompt), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      <%= button_to "삭제", execution_path(@execution), method: :delete, class: "rounded-md bg-red-50 px-3 py-1.5 text-sm text-red-700 ring-1 ring-inset ring-red-200 hover:bg-red-100", data: { turbo_confirm: "삭제하시겠습니까?" } %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <dl class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <div>
        <dt class="text-xs font-medium text-gray-500">프로바이더</dt>
        <dd class="text-sm text-gray-900"><%= @execution.ai_provider&.name %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-gray-500">상태</dt>
        <dd><span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium <%= @execution.status == 'completed' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>"><%= @execution.status %></span></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-gray-500">토큰</dt>
        <dd class="text-sm text-gray-900"><%= @execution.token_count %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-gray-500">소요 시간</dt>
        <dd class="text-sm text-gray-900"><%= @execution.duration_ms %>ms</dd>
      </div>
    </dl>

    <% if @execution.input_variables.present? && @execution.input_variables.any? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-700 mb-2">입력 변수</h3>
        <div class="flex flex-wrap gap-2">
          <% @execution.input_variables.each do |key, value| %>
            <span class="inline-flex items-center rounded-md bg-gray-100 px-2 py-1 text-xs">
              <span class="font-medium text-gray-700">{{<%= key %>}}</span>
              <span class="text-gray-400 mx-1">=</span>
              <span class="text-gray-600"><%= value %></span>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mb-6">
      <h3 class="text-sm font-medium text-gray-700 mb-2">렌더링된 프롬프트</h3>
      <div class="bg-gray-50 rounded-md p-4 text-sm font-mono whitespace-pre-wrap text-gray-800"><%= @execution.rendered_content %></div>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-700 mb-2">AI 응답</h3>
      <div class="bg-gray-50 rounded-md p-4 text-sm whitespace-pre-wrap text-gray-800"><%= @execution.response_text %></div>
    </div>
  </div>
</div>
