<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">실행 기록</h1>
</div>

<div class="bg-white rounded-lg border border-gray-200">
  <% if @executions.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">프롬프트</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">프로바이더</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">상태</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">토큰</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">시간</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">실행일</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @executions.each do |exec| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 text-sm">
              <%= link_to exec.prompt.title, prompt_path(exec.prompt), class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= exec.ai_provider&.name %></td>
            <td class="px-4 py-3">
              <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium
                <%= exec.status == 'completed' ? 'bg-green-100 text-green-700' : exec.status == 'failed' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>">
                <%= exec.status %>
              </span>
            </td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= exec.token_count %></td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= exec.duration_ms %>ms</td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= exec.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td class="px-4 py-3 text-sm">
              <%= link_to "상세", execution_path(exec), class: "text-indigo-600 hover:text-indigo-500" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-8">
      <p class="text-sm text-gray-500">실행 기록이 없습니다.</p>
    </div>
  <% end %>
</div>
