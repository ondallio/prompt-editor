<div class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition-shadow">
  <div class="flex items-start justify-between mb-2">
    <div class="flex-1">
      <%= link_to note.display_title, note, class: "text-lg font-semibold text-gray-900 hover:text-indigo-600" %>
    </div>
    <% if note.favorite %>
      <svg class="h-5 w-5 text-yellow-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
    <% end %>
  </div>
  <p class="text-sm text-gray-500 line-clamp-3 mb-3"><%= note.preview_text %></p>
  <% if note.tags.any? %>
    <div class="flex flex-wrap gap-1 mb-2">
      <% note.tags.limit(5).each do |tag| %>
        <%= link_to "##{tag.name}", tag_path(tag.name), class: "rounded-full px-2 py-0.5 text-xs font-medium hover:opacity-80", style: "background-color: #{tag.color || '#6366F1'}20; color: #{tag.color || '#6366F1'}" %>
      <% end %>
      <% if note.tags.size > 5 %>
        <span class="rounded-full px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-500">+<%= note.tags.size - 5 %></span>
      <% end %>
    </div>
  <% end %>
  <div class="flex items-center justify-between text-xs text-gray-400">
    <span><%= note.outgoing_links.size %>개 링크</span>
    <span><%= time_ago_in_words(note.updated_at) %> 전</span>
  </div>
</div>
