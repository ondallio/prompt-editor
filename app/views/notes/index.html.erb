<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">노트</h1>
  <%= link_to "새 노트", new_note_path, class: "inline-flex items-center gap-1 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
</div>

<div class="flex gap-2 mb-4 flex-wrap">
  <%= link_to "전체", notes_path, class: "rounded-full px-3 py-1 text-sm font-medium #{params[:tag].blank? && params[:favorites].blank? ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
  <%= link_to "즐겨찾기", notes_path(favorites: true), class: "rounded-full px-3 py-1 text-sm font-medium #{params[:favorites] == 'true' ? 'bg-yellow-100 text-yellow-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
  <% @popular_tags.each do |tag| %>
    <%= link_to "##{tag.name}", notes_path(tag: tag.name), class: "rounded-full px-3 py-1 text-sm font-medium #{params[:tag] == tag.name ? 'text-white' : 'text-gray-600 hover:bg-gray-200'}", style: params[:tag] == tag.name ? "background-color: #{tag.color || '#6366F1'}" : "background-color: #f3f4f6" %>
  <% end %>
</div>

<%= form_with url: notes_path, method: :get, class: "mb-6", data: { turbo_frame: "_top" } do |f| %>
  <div class="relative">
    <input type="text" name="q" value="<%= params[:q] %>" placeholder="노트 검색..." class="w-full rounded-lg border border-gray-300 px-4 py-2 pl-10 text-sm focus:border-indigo-500 focus:ring-indigo-500">
    <svg class="absolute left-3 top-2.5 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
  </div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @notes.each do |note| %>
    <%= render "notes/card", note: note %>
  <% end %>
</div>

<% if @notes.empty? %>
  <div class="text-center py-12 bg-white rounded-lg border border-dashed border-gray-300">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
    <h3 class="mt-2 text-sm font-semibold text-gray-900">노트가 없습니다</h3>
    <p class="mt-1 text-sm text-gray-500">새 노트를 작성하여 생각을 기록하세요.</p>
    <div class="mt-4">
      <%= link_to "새 노트 작성", new_note_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
    </div>
  </div>
<% end %>
