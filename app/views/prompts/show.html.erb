<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <%# 왼쪽: 프롬프트 상세 %>
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-start justify-between mb-4">
        <div>
          <div class="flex items-center gap-2">
            <h1 class="text-2xl font-bold text-gray-900"><%= @prompt.title %></h1>
            <% if @prompt.category %>
              <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium text-white" style="background-color: <%= @prompt.category.color || '#6366F1' %>">
                <%= @prompt.category.name %>
              </span>
            <% end %>
          </div>
          <p class="mt-1 text-sm text-gray-500">v<%= @prompt.current_version || 1 %> · <%= @prompt.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
        </div>
        <div class="flex items-center gap-2">
          <turbo-frame id="favorite-btn">
            <%= button_to toggle_favorite_prompt_path(@prompt), method: :post, class: "p-1.5 rounded-md hover:bg-gray-100" do %>
              <% if @prompt.favorite %>
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
              <% else %>
                <svg class="h-5 w-5 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>
              <% end %>
            <% end %>
          </turbo-frame>
          <%= link_to edit_prompt_path(@prompt), class: "rounded-md bg-white px-3 py-1.5 text-sm font-medium text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
            수정
          <% end %>
          <%= button_to "삭제", prompt_path(@prompt), method: :delete, class: "rounded-md bg-red-50 px-3 py-1.5 text-sm font-medium text-red-700 ring-1 ring-inset ring-red-200 hover:bg-red-100", data: { turbo_confirm: "정말 삭제하시겠습니까?" } %>
        </div>
      </div>

      <% if @prompt.system_prompt.present? %>
        <div class="mb-4">
          <h3 class="text-sm font-medium text-gray-500 mb-1">시스템 프롬프트</h3>
          <div class="bg-gray-50 rounded-md p-3 text-sm text-gray-700 font-mono whitespace-pre-wrap"><%= @prompt.system_prompt %></div>
        </div>
      <% end %>

      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">프롬프트 내용</h3>
        <div class="bg-gray-50 rounded-md p-4 text-sm text-gray-800 font-mono whitespace-pre-wrap" data-controller="highlight-variables"><%= @prompt.content %></div>
      </div>

      <% if @prompt.variables.any? %>
        <div class="mt-4">
          <h3 class="text-sm font-medium text-gray-500 mb-2">감지된 변수</h3>
          <div class="flex flex-wrap gap-2">
            <% @prompt.variables.each do |var| %>
              <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-600/20">
                {{<%= var.name %>}}
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <%# 버전 히스토리 %>
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">버전 히스토리</h2>
      <turbo-frame id="versions-list">
        <% if @prompt.versions.any? %>
          <div class="space-y-3">
            <% @prompt.versions.ordered.each do |version| %>
              <div class="flex items-center justify-between p-3 rounded-md <%= version.version_number == @prompt.current_version ? 'bg-indigo-50 border border-indigo-200' : 'bg-gray-50' %>">
                <div>
                  <span class="text-sm font-medium text-gray-900">v<%= version.version_number %></span>
                  <span class="text-xs text-gray-500 ml-2"><%= version.created_at.strftime("%Y-%m-%d %H:%M") %></span>
                  <% if version.version_number == @prompt.current_version %>
                    <span class="ml-2 inline-flex items-center rounded-full bg-indigo-100 px-2 py-0.5 text-xs font-medium text-indigo-700">현재</span>
                  <% end %>
                </div>
                <% unless version.version_number == @prompt.current_version %>
                  <%= button_to "복원", restore_version_prompt_path(@prompt, version_id: version.id), method: :post, class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium", data: { turbo_confirm: "v#{version.version_number}으로 복원하시겠습니까?" } %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">아직 버전 기록이 없습니다.</p>
        <% end %>
      </turbo-frame>
    </div>
  </div>

  <%# 오른쪽: 실행 패널 %>
  <div class="space-y-6">
    <div class="bg-white rounded-lg border border-gray-200 p-6 sticky top-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">실행</h2>

      <%= form_with url: execute_prompt_path(@prompt), method: :post, data: { controller: "execute", turbo_frame: "_top" } do |f| %>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">AI 프로바이더</label>
            <select name="ai_provider_id" class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" required>
              <option value="">선택하세요</option>
              <% @ai_providers.each do |provider| %>
                <option value="<%= provider.id %>"><%= provider.name %> (<%= provider.ai_model %>)</option>
              <% end %>
            </select>
            <% if @ai_providers.empty? %>
              <p class="mt-1 text-xs text-amber-600">
                <%= link_to "AI 프로바이더를 먼저 등록하세요", new_ai_provider_path, class: "underline" %>
              </p>
            <% end %>
          </div>

          <% if @prompt.variables.any? %>
            <div class="space-y-3">
              <h3 class="text-sm font-medium text-gray-700">변수 입력</h3>
              <% @prompt.variables.each do |var| %>
                <div>
                  <label class="block text-xs font-medium text-gray-600 mb-1">{{<%= var.name %>}}</label>
                  <input type="text" name="variables[<%= var.name %>]" value="<%= var.default_value %>" class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" placeholder="<%= var.description || var.name %>">
                </div>
              <% end %>
            </div>
          <% end %>

          <button type="submit" class="w-full rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500 disabled:opacity-50" data-execute-target="submitBtn">
            실행
          </button>
        </div>
      <% end %>

      <%# 실행 결과 %>
      <div id="execution-result" class="mt-4">
      </div>
    </div>

    <%# 최근 실행 기록 %>
    <% if @recent_executions.any? %>
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h3 class="text-sm font-semibold text-gray-900 mb-3">최근 실행</h3>
        <div class="space-y-2">
          <% @recent_executions.each do |exec| %>
            <%= link_to execution_path(exec), class: "block p-2 rounded-md hover:bg-gray-50 text-sm" do %>
              <div class="flex items-center justify-between">
                <span class="font-medium text-gray-700"><%= exec.ai_provider&.name %></span>
                <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium
                  <%= exec.status == 'completed' ? 'bg-green-100 text-green-700' : exec.status == 'failed' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>">
                  <%= exec.status %>
                </span>
              </div>
              <p class="text-xs text-gray-500 mt-0.5"><%= exec.created_at.strftime("%m/%d %H:%M") %> · <%= exec.token_count %> tokens</p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
