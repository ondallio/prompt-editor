<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">프롬프트</h1>
  <%= link_to "새 프롬프트", new_prompt_path, class: "inline-flex items-center gap-1 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
</div>

<div class="flex gap-2 mb-4 flex-wrap">
  <%= link_to "전체", prompts_path, class: "rounded-full px-3 py-1 text-sm font-medium #{params[:category_id].blank? && params[:favorites].blank? ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
  <%= link_to "즐겨찾기", prompts_path(favorites: true), class: "rounded-full px-3 py-1 text-sm font-medium #{params[:favorites] == 'true' ? 'bg-yellow-100 text-yellow-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
  <% @categories.each do |cat| %>
    <%= link_to cat.name, prompts_path(category_id: cat.id), class: "rounded-full px-3 py-1 text-sm font-medium #{params[:category_id] == cat.id.to_s ? 'text-white' : 'text-gray-600 hover:bg-gray-200'}", style: params[:category_id] == cat.id.to_s ? "background-color: #{cat.color || '#6366F1'}" : "background-color: #f3f4f6" %>
  <% end %>
</div>

<%= form_with url: prompts_path, method: :get, class: "mb-6", data: { turbo_frame: "_top" } do |f| %>
  <div class="relative">
    <input type="text" name="q" value="<%= params[:q] %>" placeholder="프롬프트 검색..." class="w-full rounded-lg border border-gray-300 px-4 py-2 pl-10 text-sm focus:border-indigo-500 focus:ring-indigo-500">
    <svg class="absolute left-3 top-2.5 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
  </div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @prompts.each do |prompt| %>
    <div class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition-shadow">
      <div class="flex items-start justify-between mb-2">
        <div class="flex-1">
          <%= link_to prompt.title, prompt, class: "text-lg font-semibold text-gray-900 hover:text-indigo-600" %>
          <% if prompt.category %>
            <span class="ml-2 inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium text-white" style="background-color: <%= prompt.category.color || '#6366F1' %>">
              <%= prompt.category.name %>
            </span>
          <% end %>
        </div>
        <% if prompt.favorite %>
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
        <% end %>
      </div>
      <p class="text-sm text-gray-500 line-clamp-3 mb-3"><%= truncate(prompt.content, length: 150) %></p>
      <div class="flex items-center justify-between text-xs text-gray-400">
        <span>v<%= prompt.current_version || 1 %></span>
        <span><%= prompt.variables.size %>개 변수</span>
        <span><%= time_ago_in_words(prompt.updated_at) %> 전</span>
      </div>
    </div>
  <% end %>
</div>

<% if @prompts.empty? %>
  <div class="text-center py-12 bg-white rounded-lg border border-dashed border-gray-300">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
    <h3 class="mt-2 text-sm font-semibold text-gray-900">프롬프트가 없습니다</h3>
    <p class="mt-1 text-sm text-gray-500">새 프롬프트를 만들어 시작하세요.</p>
    <div class="mt-4">
      <%= link_to "새 프롬프트 만들기", new_prompt_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
    </div>
  </div>
<% end %>
